<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.poltekkes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:usesCleartextTraffic="true">
        <activity android:name=".menu.menu_history"
            android:label="History"
            android:theme="@style/Theme.AppCompat.Light"></activity>
        <activity
            android:name=".menu.menu_pertanyaan"
            android:label="Pertanyaan"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".menu.menu_input_data"
            android:label="Input Data"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".menu.menu_register"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".menu.menu_login"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".menu.menu_utama"
            android:theme="@style/Theme.AppCompat.DayNight" />
        <activity android:name=".menu.menu_materi" />
        <activity android:name=".menu.menu_bantuan" />
        <activity android:name=".menu.menu_pembuka">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>